    <ProgressBar
        android:id="@+id/simpleProgressBar"
        android:layout_width="fill_parent"
        android:max="100"
        android:layout_marginVertical="10dp"
        android:progress="30"
        android:layout_marginLeft="15dp"
        android:layout_toLeftOf="@id/btn_plus"
        android:layout_alignTop="@id/btn_plus"
        android:layout_alignBottom="@id/btn_plus"
        android:progressDrawable="@drawable/custom_progress"
        android:layout_height="50dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>




        <Button
            android:id="@+id/btn_plus"
            android:layout_width="75dp"
            android:text="+"
            android:textSize="35sp"
            android:layout_toLeftOf="@id/lbl_value"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/lbl_value"
            android:layout_width="50dp"
            android:layout_alignTop="@id/btn_plus"
            android:layout_alignBottom="@id/btn_plus"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/btn_moins"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:text="0"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn_moins"
            android:layout_width="75dp"
            android:textSize="35sp"
            android:layout_alignParentRight="true"
            android:text="-"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</LinearLayout>