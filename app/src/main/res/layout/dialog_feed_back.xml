<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feedback"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txt_fb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nous serions ravis d'avoir votre avis ou vos recommandations sur notre application. Vous pouvez Ã©galement nous contacter via notre page facebook en cliquant ici."
            android:textColor="#3f51b5"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:padding="15dp"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#FF909090" />

        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:gravity="center"
            android:text="Votre avis :"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/aviss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="60dp"
            android:gravity="center"
            android:textSize="20dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_height="50dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:id="@+id/annulerrr_button"
                android:text="Annuler"
                android:gravity="center"
                android:background="@drawable/my_button_xml_small"/>

            <TextView
                android:layout_height="50dp"
                android:id="@+id/envoyer_button"
                android:text="Envoyer"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:background="@drawable/my_button_xml_small"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>